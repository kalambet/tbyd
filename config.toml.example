# Environment variables (prefixed TBYD_) override file values.

[server]
# port = 4000            # HTTP API port
# mcp_port = 4001        # MCP server port

[ollama]
# base_url = "http://localhost:11434"
# fast_model = "phi3.5"
# deep_model = "mistral-nemo"
